@{
    ViewBag.Title = "FullInfo";
    Layout = "~/Views/Shared/_Master.cshtml";
}

@model ProjetoLeLol.ViewModel.FullInfoPlayerVM

@*<div class="jumbotron">*@

    @* Main Info*@
    <div class="grid-item six">
        <div class="plain opaque box twelve">
            <section>
                <header>
                    <h4 class="blue type news-icon-present">
                        <span class="news-label-text">Informações Gerais</span>
                    </h4>
                </header>
                <img src="@Model.ProfilePic" >
                <article>
                        <p>Level <b>@Model.Level</b></p>
                        <p>Elo <b>@Model.Tier</b></p>
                </article>
            </section>
        </div>
    </div>

    @* Ranked Stats *@
    <div class="grid-item six">
        <div class="plain opaque box twelve">
            <section>
                <header>
                    <h4 class="blue type news-icon-present">
                        <span class="news-label-text">Status Ranked SoloQ</span>
                    </h4>

                </header>

                        <img src="@Model.TierPic" >
                <article>
                        <p><b>@Model.Tier @Model.Division</b></p>
                        <p><b style="color: #6c0;">@Model.WinsRanked</b> Vitórias</p>
                        <p><b style="color: #d20;">@Model.LossRanked</b> Derrotas</p>
                        <p>Campeões Inimigos Derrotados <b>@Model.TotalChampionKills</b></p>
                        <p>Minions Abatidos <b>@Model.TotalMinionKills</b></p>
                </article>
            </section>
        </div>
    </div>

    @* Champions *@
    <div class="grid-item twelve">
        <div class="plain opaque box twelve">
            <section>
                <header>
                    <h4 class="blue type news-icon-present">
                        <span class="news-label-text">Campeões mais jogados</span>
                    </h4>

                </header>

                        <img src="@Model.TierPic" >
                <article>
                        <p><b>@Model.Tier @Model.Division</b></p>
                        <p><b style="color: #6c0;">@Model.WinsRanked</b> Vitórias</p>
                        <p><b style="color: #d20;">@Model.LossRanked</b> Derrotas</p>
                </article>
            </section>
        </div>
    </div>

